<section class="controls">
  <div id="newideabox">
    <header>
      <h1>New Idea</h1>
    </header>
    <div id="newidea_text" class="fl">
      <form id="ideaform">
        <div>
          <p>Idea Title</p>
          <input type="text" value="" name="ideatitle" class="ideatitlebox" placeholder="Give a title to your idea" />
        </div>
        <div>
          <p>Description</p>
          <textarea rows="4" cols="37" name="description"></textarea>
        </div>
        <div>
          <p>Client (optional)</p>
          <input type="text" value="" name="client" class="client" placeholder="This is optional" />
        </div>
        <div>
          <p>Do you want to display it as a public idea?</p>
          <label for="publicyes">Yes</label>
          <input type="radio" name="publicidea" value="1" id="publicyes" />
          <label for="publicno">No</label>
          <input type="radio" name="publicidea" value="0" id="publicno" />
        </div>
        <div>
          <p>Gather information from feedback you receive on social networks?</p>
          <label for="scrapesnyes">Yes</label>
          <input type="radio" name="scrapesn" value="1" id="scrapesnyes" />
          <label for="scrapesnno">No</label>
          <input type="radio" name="scrapesn" value="0" id="scrapesnno" />
        </div>
        <div>
          <p>Tags:</p>
          <input type="text" name="tags" id="tags_p" value="" />
        </div>	
      </form>
    </div>
    <div id="newideaupload" class="fr">				
      <div class="uploader">
        <!--
        <h1>Files</h1>
        <table id="files-table" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>File Name</th>
              <th>File Size</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
        -->
        <h1>Upload</h1>
        <div id="upload-panel" class="well">Drag a file here to upload!</div>
        <div id="uploads"></div>
        <!--
        <h1>Upload alternate</h1>
        <form action="/s3bucket" enctype="multipart/form-data" method="post" class="uploaderst">
          <input type="file" name="upload" class="uploadfield" />
          <button type="submit" class="btn btn-primary btn-upload">Upload</button>
        </form>
        -->
      </div>
    </div>
  </div> <!-- /ideabox -->
</section>
<section id="main" class="clearfix dashboard">
  <header>
    <h2>Your ideas</h2>
    <ul class="breadcrumb">
      <li>
        <%= link_to 'Home', root_path %>
        <span class="divider">/</span>
      </li>
      <li>
        <%= link_to 'Dashboard', dashboard_index_path, :class => 'active' %>
      </li>
    </ul>

  </header>
  <div id="ideasList">
    <div id="ideas" class="clearfix">
      <% for idea in [{'id' => ['3', '4'], 'title' => 'Idea 1'}, {'id' => ['2', '1'], 'title' => 'Second Idea'}, {'id' => ['3', '4'], 'title' => 'Another Idea'}] %>
        <article class="idea">
          <header>
            <%= image_tag 'avatar.png', :alt => 'avatar', :width => 80, :height => 80 %>
            <span class="username">User's Name</span>
            <span class="location">San Francisco, CA</span>     
            <button type="button" name="" value="" class="follow"></button>             
          </header>
          <div class="preview">
            <%#= image_tag 'idea_thumb'+idea['id'][0]+'.png', :alt => 'idea_thumb'+idea['id'][0] %>
            <%= link_to image_tag('idea_thumb'+idea['id'][0]+'.png', :alt => 'idea_thumb'+idea['id'][0]), user_idea_index_path %>
          </div>
          <footer class="clearfix">
            <div>
              <span class="comments number"> <%= link_to '0', '#', :title => 'You have no comments' %></span>
            </div>
            <div>
              <span class="likes number"><%= link_to '12', '#', :title => 'Number of times your idea has been seen' %></span>
            </div>
            <div>
              <span class="views number"><%= link_to '6', '#', :title => 'Number of times your idea has been viewed' %></span>
            </div>
            <span class="idea_delete">
               <%= link_to ' ', '#', :title => "This will delete the idea and it'll be lost for ever...", :class => 'confirm' %>
            </span>
          </footer>
        </article><!-- /idea -->
      <% end %>
    </div> <!-- /ideas -->
  </div> <!-- /ideasList -->
</section><!-- /main -->
<a class="share" href="#sharebox"></a>
<div id="sharebox">
  <header>
    <h1>Share > Idea</h1>
  </header>
  <div id="share_text" class="fl">
    <div>
      <p><strong>Short URL:</strong></p>
      <p>Use this URL in your tweets or facebook comments, that way INSPIRATIO can track the feedback you receive. </p>
      <input type="text" disabled="disabled" value="http://insprat.io/234dxc" name="shorturl"/>
    </div>
    <div>
      <p>Do you want to track the feedback for this link?</p>
      <img src="imgs/share_yes_no.png" alt="share_yes_no" width="134" height="18">
    </div>
    <div>
      <p>Select the networks you like to collect info from. You must have authorised the accounts in your <a href="#">settings.</a></p>
      <img src="imgs/share_social_pick.png" alt="share_social_pick" width="288" height="51">
    </div>
    <button type="button" name="" value="" class="greenbtn fr done">DONE</button>	
  </div>
  <div id="bigpic" class="fr">
    <h2><strong>Idea:</strong> New iPad App</h2>
    <img src="imgs/img_dummy_idea.jpeg" alt="img_dummy_idea" width="2000" height="1250">
  </div>
</div> <!-- /share -->
