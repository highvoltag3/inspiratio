<!-- we need to hide the subnav here since it is useless instead of using Ruby we can just do one line of css -->
<style>
  #subnav {
    display: none;
  }
</style>
<div class="container">
  <div class="row-fluid">
    
    <div class="span5 well">
      
	    <h2 class="text-success lead">Already a member?</h2>
	    <h1>Login</h1>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div><%= f.label :email %><br />
		  <%= f.email_field :email, :autofocus => true, :placeholder => "email@address.com", :required => '' %></div>

		  <div><%= f.label :password %><br />
		  <%= f.password_field :password,:placeholder => 'Password', :required => '' %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me, :class => "pull-left" %> <%= f.label :remember_me %></div>
		  <% end -%>
		  <br />
		  <div><%= f.submit "Sign in", :class => 'btn btn-success' %></div>
		<% end %>

		<%#= render "devise/shared/links" %>    

    </div>

    <div class="span5 offset1 well">

      <%= render :template => 'devise/registrations/new' %>    

    </div>

  </div>
</div>