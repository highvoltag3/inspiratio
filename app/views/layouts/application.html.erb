  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
  <%#= javascript_include_tag 'http://code.jquery.com/jquery-latest.min.js' %>
  <%# <script>!window.jQuery && document.write('<script src="/assets/jquery-1.7.2.min.js"><\/script>')</script>%>
  <%= javascript_include_tag 'application' %>

  <!-- !CSS -->
  <%#= stylesheet_link_tag 'bootstrap.min', 'styles', 'jquery.fancybox' %>
  <%= stylesheet_link_tag 'application' %>
  <!-- Uncomment if you are specifically targeting less enabled mobile browsers
  <%= stylesheet_link_tag 'handheld', :media => 'handheld' %>
  -->

  <!-- !Modernizr - All other JS at bottom -->
  <%= javascript_include_tag 'modernizr-2.5.min' %>



  <script src="http://cdn.slingpic.com/js/slingpic.plugin.js"></script><script>
  jQuery(window).load(function(){
    jQuery(".preview img").slingPic({ theme: "subtle" });
  });
  </script>

  <!-- template specific headers -->
  <%= yield(:more_headers) if content_for?(:more_headers) %>

  <%= csrf_meta_tags %>
</head>
<!-- !Body -->
    <div id="container" class="<%= @main_container or 'frontpage' %>">
      <% if user_signed_in? %>
        <%= render :partial => 'user_header' %>
        <%#= link_to "Sign out", destroy_user_session_path %>
    <% else %>
        <%= render :partial => 'public_header' %>
        <%#= link_to 'Sign in', new_user_session_path%>
        <%#= link_to 'Sign up', new_user_registration_path%>
    <% end %>

      <%= render :partial => 'layouts/messages' %>

      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div> <!-- end container -->

    <%= render :partial => 'footer' %>

    <!-- !Javascript - at the bottom for fast page loading -->
    <%#= javascript_include_tag 'plugins', 'bootstrap.min', 'global.js' %>
    <!-- template specific js includes -->
    <%#= yield(:js_includes) if content_for?(:js_includes) %>
  </body>
