<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="span4 offset4">
        <div class="well">
          <div class="nav">
            <a class="btn" href="/"><i class="icon-user"></i>Login</a>
          </div>
          <h1>Sign Up</h1>
          <!--
            A simple table to display messages.
          -->
          <table id="messages" class="table table-bordered table-striped"></table>
          <form class="form-horizontal">
            <div class="input-prepend control-group">
                <span class="add-on">username</span>
                <%= f.text_field :email, :class => 'input-small' %>
            </div>
            <div class="input-prepend control-group" style="margin-left: -26px;">
                <span class="add-on">password</span>
                <%= f.password_field :password, :class => 'input-small' %>
            </div>
            <div class="input-prepend control-group">
                <span class="add-on">screen name</span>
                <%= f.text_field :screenname, :class => 'input-small' %>
            </div>
          </form>
          <button id="register" class="btn-primary btn">Sign Up</button>
          <%#= f.submit %>
        </div>  
      </div>
    </div>
  </div>
<% end %>
