    <p> <%= f.label :title %><br />
        <%= f.text_field :title %>

        <%= f.label :description %><br />
        <%= f.text_area :description %>

        <%= f.label :tag_list %><br />
        <%= f.text_field :tag_list %>

        <%#= f.label :public %>
        <%#= f.check_box :public %>

        <%#= f.label :uploaded_file, "File" %><br />
        <%#= f.file_field :uploaded_file %>
      </p>
