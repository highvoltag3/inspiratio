<header>
  <div id="logo">
    <%= link_to image_tag('new/logo.png', :alt => 'logo', :width => 179, :height => 40), root_path %>
  </div>
  <nav>
    <ul id="nav">
      <li class="selected">
        <%= link_to 'All', root_path, :id => 'home', :title => 'Browse the gallery' %>
      </li>
      <li>
        <%= link_to 'Most Popular', '#', :id => 'mp', :title => 'Most Popular' %>
      </li>
      <li>
        <%= link_to 'Most Viewed', '#', :id => 'mv', :title => 'Most Viewed' %>
      </li>
    </ul>
  </nav><!-- /nav  -->
  <div id="signinreg">
    <div>
      <input type="email" name="username" value="" id="username" placeholder="username or email" />
      <input type="password" name="password"  value="" id="password" placeholder="password" />
      <span class="actions">
        <%= link_to '<button name="signin" id="sighin">Sign in</button>'.html_safe, dashboard_index_path %>
        - or -
        <%= link_to '<button name="register" class="fr" id="register">Register</button>'.html_safe, sign_up_index_path %>
      </span>
      <div class="arrow_box">
        You can fill the form and click on register to create a new account is that easy!
      </div>
    </div>
  </div>
</header><!-- /header -->
