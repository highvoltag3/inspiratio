<%= render :template => '/application/_public_header' %>
<!-- we need to hide the subnav here since it is useless instead of using Ruby we can just do one line of css -->
<style>
  #subnav {
    display: none;
  }
</style>
<div class="container">
  <div class="row-fluid">
    
    <div class="span5 offset1 well">
      
      <legend><h2>Sign In</h2></legend>
         
      <div class="alert alert-error">
          <a class="close" data-dismiss="alert" href="#">×</a>Incorrect Username or Password!
      </div>

      <form method="POST" action="" accept-charset="UTF-8">
          <input type="text" id="username" class="" name="username" placeholder="Username or email" required>
          <input type="password" id="password" class="" name="password" placeholder="Password" required>
        
          <label class="checkbox">
            <input type="checkbox" name="remember" value="1"> Remember Me
          </label>
          <button type="submit" name="submit" class="btn btn-success btn-block">Sign in</button>
      </form>    

    </div>

    <div class="span5 offset1 well">
      
      <legend><h2>Register</h2></legend>
         
      <div class="alert alert-error">
          <a class="close" data-dismiss="alert" href="#">×</a>Incorrect Username or Password!
      </div>

      <form method="POST" action="" accept-charset="UTF-8">
          <legend>User Details</legend>
          <div class="input-append control-group">
              <input type="text" id="name" class="" name="name" placeholder="Name and Last name" required><span class="add-on">Name</span>
          </div>
          <div class="input-append control-group">
              <input type="email" id="email" name="email" class="" placeholder="email@address.com" required/><span class="add-on">email</span>
          </div>
          <div class="input-append control-group">
              <input type="text" id="username" class="" name="username" placeholder="Your desired username" required><span class="add-on">username</span>
          </div>
          <div class="input-append control-group">
              <input type="text" id="appendedInput" class="" name="location" placeholder="Where are you?"><span class="add-on"><i class="icon-map-marker"></i></span>
          </div>

          <legend>Choose a password</legend>
          <div class="input-append control-group">
              <input type="password" class="" id="password" class="" name="password" placeholder="Password" required><span class="add-on">Password</span>
          </div>
          <div class="input-append control-group">
              <input type="password" class="" id="password2" class="" name="password2" placeholder="Confirm Password" required><span class="add-on">Password</span>
          </div>
          
          <button type="submit" name="register" class="btn btn-info btn-block">Register</button>
      </form>    

    </div>

  </div>
</div>