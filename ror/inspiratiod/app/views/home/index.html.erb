<% content_for :js_includes do %>
  <% javascript_include_tag 'home' %>
<% end %>

<section class="carousel row-flow">
  <div id="mainCarousel" class="carousel slide">
    <ol class="carousel-indicators">
      <li data-target="#mainCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#mainCarousel" data-slide-to="1"></li>
      <li data-target="#mainCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Carousel items -->
    <div class="carousel-inner">
      <div class="active item">
        <%= image_tag 'new/fake_carousel.png', :alt => 'Carousel 1' %>
      </div>
      <div class="item">
        <%= image_tag 'new/fake_carousel2.png', :alt => 'Carousel 1' %>
      </div>
      <div class="item">
        <%= image_tag 'new/fake_carousel.png', :alt => 'Carousel 1' %>
      </div>
    </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#mainCarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#mainCarousel" data-slide="next">&rsaquo;</a>
  </div>
</section>

<section id="main" class="clearfix home">
  <div id="ideas">
    <% for img in ['img_dummy_idea.jpeg', 'img_3_Eye_Toy.jpg', 'img_197075460.jpg', 'img_201030080404.jpg', 'img_Deep.jpg', 'img_Fractal_Lion.jpg'] %>
      <article class="idea">
        <header>
          <%= image_tag 'avatar.png', :alt => 'avatar', :width => 80, :height => 80 %>
          <span class="username">User's Name</span>
          <span class="location">San Francisco, CA</span>     
          <button type="button" name="" value="" class="follow"></button>             
        </header>
        <div class="preview">
          <%= link_to image_tag(img, :alt => 'img_dummy_idea'), idea_index_path %>
        </div>
        <footer class="clearfix">
          <div>
            <span class="comments number">1400</span>
          </div>
          <div>
            <span class="likes number">40</span>
          </div>
          <div>
            <span class="views number">200</span>
          </div>
        </footer>
      </article>
    <% end %>
  </div> <!-- /articlesContainer -->
</section><!-- /main -->
